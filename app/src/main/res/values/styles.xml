<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsMenuItemWrapperStyle">
        <item name="android:layout_height">@dimen/height_menu_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/padding_menu_item</item>
    </style>

    <style name="SettingsMenuItemStyle" parent="@style/SettingsMenuItemWrapperStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_menu_item</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditSearchStyle">
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">ys_display_regular</item>
    </style>

    <style name="ItemSearchSubText">
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SearchCleatTintColor">
        <item name="tint">@color/yp_text_gray</item>
    </style>
    
    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="ConnectionErrorPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
    </style>

</resources>